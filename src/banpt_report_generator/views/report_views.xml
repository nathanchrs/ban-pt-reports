<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_report_tree">
            <field name="name">Laporan</field>
            <field name="model">banpt_report_generator.report</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="year" />
                    <field name="prodi" />
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_report_form">
            <field name="name">Laporan</field>            
            <field name="model">banpt_report_generator.report</field>
            <field name="type">form</field>
            <field name="priority" eval="0" />
            <field name="arch" type="xml">
                <form string="Laporan">
                    <header>
                        <button string="Mutakhirkan data" type="object" name="refresh" />
                        <button string="Setujui" type="object" name="approve" attrs="{'invisible': [('state', '=', 'approved')]}" />
                        <field name="state" widget="statusbar" />
                    </header>
                    <group>
                        <field name="id" invisible="1" />
                        <field name="name" />
                        <field name="year" attrs="{'readonly': [('id', '!=', False)]}" />
                        <field name="prodi" attrs="{'readonly': [('id', '!=', False)]}" />
                        <field name="description" />
                    </group>
                    <hr/>
                    <div class="banpt_notebook_group banpt_report_tables">
                        <div class="dropdown" id="banpt_report_tables_menu_container">
                            <a class="btn dropdown-toggle banpt_report_tables_menu" data-toggle="dropdown" href="#">
                                <span class="banpt_report_tables_menu_text">Pilih tabel </span><span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu banpt_report_tables_dropdown" role="tablist">
                                <!-- Add table report dropdown menu items here -->
                                <li role="presentation">
                                    <a href="#tab_dosen" aria-controls="tab_dosen" role="tab" data-toggle="tab">Dosen</a>
                                </li>
                                <li role="presentation">
                                    <a href="#tab_identitas" aria-controls="tab_identitas" role="tab" data-toggle="tab">Identitas Prodi</a>
                                </li>
                                <li role="presentation">
                                    <a href="#tab_pengisi" aria-controls="tab_pengisi" role="tab" data-toggle="tab">Pengisi</a>
                                </li>
                                <li role="presentation">
                                    <a href="#tab_record_3a_311" aria-controls="tab_record_3a_311" role="tab" data-toggle="tab">3A-3.1.1 Data Mahasiswa Reguler</a>
                                </li>
                                <li role="presentation">
                                    <a href="#tab_record_3a_312" aria-controls="tab_record_3a_312" role="tab" data-toggle="tab">3A-3.1.2 Data Mahasiswa Non-Reguler</a>
                                </li>
                                <li role="presentation">
                                    <a href="#tab_record_3a_314" aria-controls="tab_record_3a_314" role="tab" data-toggle="tab">3A-3.1.4 Jumlah Mahasiswa Reguler 7 Tahun Terakhir</a>
                                </li>
                                <li role="presentation">
                                    <a href="#tab_record_3a_331" aria-controls="tab_record_3a_331" role="tab" data-toggle="tab">3A-3.3.1 Evaluasi Kinerja Lulusan</a>
                                </li>
                                <li role="presentation">
                                    <a href="#tab_record_3a_431" aria-controls="tab_record_3a_431" role="tab" data-toggle="tab">3A-4.3.1 Dosen Tetap yang Bidang Keahliannya Sesuai Bidang PS</a>
                                </li>
                                <li role="presentation">
                                    <a href="#tab_record_3a_432" aria-controls="tab_record_3a_432" role="tab" data-toggle="tab">3A-4.3.2 Dosen Tetap yang Bidang Keahliannya Di Luar PS</a>
                                </li>
                                <li role="presentation">
                                    <a href="#tab_record_3a_433" aria-controls="tab_record_3a_433" role="tab" data-toggle="tab">3A-4.3.3 Aktivitas Dosen Tetap yang Bidang Keahliannya Sesuai Dengan PS</a>
                                </li>
                                <li role="presentation">
                                    <a href="#tab_record_3a_434" aria-controls="tab_record_3a_434" role="tab" data-toggle="tab">3A-4.3.4 Aktivitas Mengajar Dosen Tetap yang Bidang Keahliannya Sesuai Dengan PS</a>
                                </li>
                                <li role="presentation">
                                    <a href="#tab_record_3a_435" aria-controls="tab_record_3a_435" role="tab" data-toggle="tab">3A-4.3.5 Aktivitas Mengajar Dosen Tetap yang Bidang Keahliannya Di Luar PS</a>
                                </li>
                            </ul>
                        </div>
                        <div class="tab-content">
                            <!-- Add table report contents here -->
                            <div role="tabpanel" class="tab-pane active" id="tab_dosen">
                                <h3 class="banpt_notebook_page_title">Dosen</h3>
                                <field name="dosen" />
                            </div>
                            <div role="tabpanel" class="tab-pane" id="tab_identitas">
                                <h3 class="banpt_notebook_page_title">Identitas Prodi</h3>
                                <field name="identitas" />
                            </div>
                            <div role="tabpanel" class="tab-pane" id="tab_pengisi">
                                <h3 class="banpt_notebook_page_title">Pengisi</h3>
                                <field name="pengisi" />
                            </div>
                            <div role="tabpanel" class="tab-pane" id="tab_record_3a_311">
                                <h3 class="banpt_notebook_page_title">3A-3.1.1 Data Mahasiswa Reguler</h3>
                                <field name="record_3a_311" />
                            </div>
                            <div role="tabpanel" class="tab-pane" id="tab_record_3a_312">
                                <h3 class="banpt_notebook_page_title">3A-3.1.2 Data Mahasiswa Non-Reguler</h3>
                                <field name="record_3a_312" />
                            </div>
                            <div role="tabpanel" class="tab-pane" id="tab_record_3a_314">
                                <h3 class="banpt_notebook_page_title">3A-3.1.4 Jumlah Mahasiswa Reguler 7 Tahun Terakhir</h3>
                                <field name="record_3a_314" />
                            </div>
                            <div role="tabpanel" class="tab-pane" id="tab_record_3a_331">
                                <h3 class="banpt_notebook_page_title">3A-3.3.1 Evaluasi Kinerja Lulusan</h3>
                                <field name="record_3a_331" />
                            </div>
                            <div role="tabpanel" class="tab-pane" id="tab_record_3a_431">
                                <h3 class="banpt_notebook_page_title">3A-4.3.1 Dosen Tetap yang Bidang Keahliannya Sesuai Bidang PS</h3>
                                <field name="record_3a_431" />
                            </div>
                            <div role="tabpanel" class="tab-pane" id="tab_record_3a_432">
                                <h3 class="banpt_notebook_page_title">3A-4.3.2 Dosen Tetap yang Bidang Keahliannya Di Luar PS</h3>
                                <field name="record_3a_432" />
                            </div>
                            <div role="tabpanel" class="tab-pane" id="tab_record_3a_433">
                                <h3 class="banpt_notebook_page_title">3A-4.3.3 Aktivitas Dosen Tetap yang Bidang Keahliannya Sesuai Dengan PS</h3>
                                <field name="record_3a_433" />
                            </div>
                            <div role="tabpanel" class="tab-pane" id="tab_record_3a_434">
                                <h3 class="banpt_notebook_page_title">3A-4.3.4 Aktivitas Mengajar Dosen Tetap yang Bidang Keahliannya Sesuai Dengan PS</h3>
                                <field name="record_3a_434" />
                            </div>
                            <div role="tabpanel" class="tab-pane" id="tab_record_3a_435">
                                <h3 class="banpt_notebook_page_title">3A-4.3.5 Aktivitas Mengajar Dosen Tetap yang Bidang Keahliannya Di Luar PS</h3>
                                <field name="record_3a_435" />
                            </div>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="view_report_action">
            <field name="name">Laporan</field>
            <field name="res_model">banpt_report_generator.report</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Belum ada laporan yang telah dibuat</p>
            </field>
        </record>

        <record model="ir.actions.act_window.view" id="view_report_tree_action">
            <field name="sequence" eval="0" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_report_tree" />
            <field name="act_window_id" ref="view_report_action" />
        </record>

        <record model="ir.actions.act_window.view" id="view_report_form_action">
            <field name="sequence" eval="1" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_report_form" />
            <field name="act_window_id" ref="view_report_action" />
        </record>
    </data>
</odoo>
